@{
    ViewBag.Title = "Conseil disciplinaire";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<GestionDesAbsencesMigration.Models.Semaine>

<div class="row justify-content-center ">
    <div class="col-md-8 ">
        <div class="card bg-light shadow">
            <div class="card-header font-weight-bolder  btn btn-primary text-center">
                Générer  un conseil
            </div>
            <div class="card-body">
                @using (Html.BeginForm("GeneratePdf", "Admin", FormMethod.Get, new { @class = "my_from" }))
                {
                    <div class="form-group">
                        <label for="Semaine">Semaine de départ</label>
                        <select name="id_semaine_dep" id="id_semaine_dep" class="form-control border">
                            <option>Selectionnez la semaine</option>
                            @foreach (var item in Model)
                            {
                                <option value="@item.id">S @item.id ( @item.Date_debut.ToShortDateString() -> @item.Date_fin.ToShortDateString() )</option>
                            }

                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Semaine">Semaine de fin</label>
                        <select name="id_semaine_fin" id="id_semaine_fin" class="form-control border">
                            <option>Selectionnez la semaine</option>
                            @foreach (var item in Model)
                            {
                                <option value="@item.id">S @item.id ( @item.Date_debut.ToShortDateString() -> @item.Date_fin.ToShortDateString() )</option>
                            }

                        </select>
                    </div>

                    <div class="form-group">
                        <label for="cne">Classe</label>
                        @Html.DropDownList("id_classe", ViewBag.list_Classe as SelectList, "Selectionnez une classe", new { id = "id_classe", @class = "form-control border" })
                    </div>

                    <div class="form-group">
                        <label for="seance">Nombre d'absence</label>
                        <input type="number" class="form-control border" name="nbAbsence" />
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" id="submit" value="Générer" />
                        <button type="reset" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>