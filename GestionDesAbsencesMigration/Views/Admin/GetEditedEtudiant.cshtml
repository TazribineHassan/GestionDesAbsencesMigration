
<input type="hidden" id="editidinput" value="@ViewBag.e" name="editidinput" />
<div class="form-group">
    <label for="editcne">CNE</label>
    <input type="text" class="form-control border" id="editcne" name="editcne" placeholder="Cne" value="@Model.Cne">
</div>
<div class="form-group">
    <label for="editnom">Nom</label>
    <input type="text" class="form-control border" id="editnom" name="editnom" placeholder="Nom" value="@Model.Nom">
</div>
<div class="form-group">
    <label for="editpreom">Preom</label>
    <input type="text" class="form-control border" id="editpreom" name="editprenom" placeholder="Preom" value="@Model.Prenom">
</div>
<div class="form-group">
    <label for="editemail">Email address</label>
    <input type="email" class="form-control border" id="editemail" name="editemail" aria-describedby="emailHelp" placeholder="Enter email" value="@Model.Email" />
</div>
<div class="form-group">
    <label>Cycle</label>
    @Html.DropDownList("editliste_cycle", ViewBag.list as SelectList, "Selectionnez le cycle", new { id = "editliste_cycle", @class = "form-control border"})

</div>
<div class="form-group">
    <label>Classe</label>
    <select class="form-control border" id="editclasse" name="editclasse">
        <option selected value="@Model.Id_classe">Classe</option>
    </select>
    
</div>
<div class="form-group">
    <label>Groupe</label>
    <select class="form-control border" id="editgroupe" name="editgroupe">
        @for (int i = 1; i < 5; i++)
        {
            if (i == Model.Id_groupe)
            {
                <option selected value="@i">@i</option>
            }
            else
            {
                <option value="@i">@i</option>
            }
        }

    </select>
</div>

<div class="modal-footer">
    <input type="submit" class="btn btn-primary" id="submit" value="Éditer" />
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
</div>

<script>
    $(document).ready(function (e) {

        $("#editliste_cycle").addClass("form-control");
        $("#editliste_cycle").change(function () {
            $.get("/Admin/GetClass", { ID: $("#editliste_cycle").val() }, function (data) {
                $("#editclasse").empty();
                $.each(data, function (index, ligne) {
                    $("#editclasse").append("<option value='" + ligne.id + "'>" + ligne.nom + "</option>")
                });

            });
        });


    });
</script>


