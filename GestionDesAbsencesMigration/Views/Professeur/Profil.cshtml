@{
    ViewData["Title"] = "Profil";
    Layout = "~/Views/Shared/ProfesseurLayout.cshtml";
}

@using GestionDesAbsencesMigration.Models
@model Professeur

<div class="row justify-content-center ">
    <div class="col-md-8 pt-3">
        <div class="card bg-light shadow">
            <div class="card-header font-weight-bolder  btn btn-primary text-center">
                Informations
            </div>
            <div class="card-body">
                <div class="card-text font-weight-bolder mb-3 pb-2 border-bottom">ID : <strong class="text-primary mx-5">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Model.Id</strong></div>
                <div class="card-text font-weight-bolder mb-3 pb-2 border-bottom">Nom : <strong class="text-primary mx-5">&nbsp;&nbsp;&nbsp; @Model.Nom</strong></div>
                <div class="card-text font-weight-bolder mb-3 pb-2 border-bottom">Prénom : <strong class="text-primary mx-5">@Model.Prenom</strong></div>
                <div class="card-text font-weight-bolder mb-3 pb-2 border-bottom">
                    Modules :
                    <ul>
                        @foreach (var item in Model.Modules)
                        {
                            <li><strong class="text-primary mx-5">@item.NomModule</strong></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>